                    <h1 class="title-part2">ENTERPRISES</h1>
                </div>
                </div>
           
            
        <div class="navbarheader">
            <div class="nav">
            <div class="items" active="true"><a href="/">Home</a></div>
            <div class="items"><a href="/about">About Us</a></div>
            <div class="items"><a href="/products">Products</a></div>
            <div class="items"><a href="/contact">Contact Us</a></div>
        </div>
        </div>
